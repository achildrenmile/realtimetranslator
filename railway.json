{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r web/requirements_offline.txt && cd web && python install_models.py"
  },
  "deploy": {
    "startCommand": "cd web && python app_offline.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}
